<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

	</com.google.android.material.appbar.AppBarLayout>

	<RelativeLayout
        android:id="@+id/mainView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context="com.noform.diaryofsuccess.MainActivity">

		<androidx.viewpager.widget.ViewPager
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/activityViewPager"/>

		<LinearLayout
			android:id="@+id/quckly_tool_bar"
			android:gravity="right"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="30dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal">

			<LinearLayout
				android:orientation="horizontal"
				android:gravity="left"
				android:layout_gravity="left"
				android:layout_width="132dp"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:background="@drawable/shape_rectangle">

				<ScrollView
					android:layout_height="66dp"
					android:scrollbars="none"
					android:overScrollMode="never"
					android:fadingEdge="none"
					android:layout_width="wrap_content">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="66dp"
						android:layout_height="132dp">

						<ImageView
							android:src="@drawable/ic_class_white_24dp"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_margin="8dp"
							android:padding="9dp"/>

						<ImageView
							android:src="@drawable/ic_event_note_white_24dp"
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_margin="8dp"
							android:padding="9dp"/>

					</LinearLayout>

				</ScrollView>

				<com.noform.diaryofsuccess.CustomView.RoundCornersImageView
					android:id="@+id/login"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="8dp"
					android:src="@drawable/head" />

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:id="@+id/quckly_tool_bar_right"
				android:gravity="right"
				android:layout_gravity="right|fill_horizontal">

				<com.noform.diaryofsuccess.CustomView.CircleRelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					app:background_alpha="255"
					android:clipChildren="false"
					android:clipToPadding="false"     
					app:background_color="@color/mediumaquamarine"
                    
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp">

					<ImageView
                        android:background="@null"
						android:id="@+id/activity_addVoiceRecordButton"
						android:src="@drawable/ic_microphone_settings"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_margin="10dp"
						android:padding="8dp"
						android:onClick="voice"/>

				</com.noform.diaryofsuccess.CustomView.CircleRelativeLayout>

				<com.noform.diaryofsuccess.CustomView.CircleRelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					app:background_alpha="255"
					app:background_color="@color/lightskyblue"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp">

					<ImageView
						android:id="@+id/activity_addDiaryButton"
						android:src="@drawable/ic_add_white_24dp"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:layout_margin="10dp"
						android:padding="8dp"/>

				</com.noform.diaryofsuccess.CustomView.CircleRelativeLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/MultipleSelectionMode_bar"
			android:gravity="center"
			android:visibility="gone"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="30dp"
			android:layout_alignParentBottom="true"
			android:orientation="horizontal">

			<com.noform.diaryofsuccess.CustomView.CircleRelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				app:background_alpha="255"
				app:background_color="@color/deepgreen"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<ImageView
					android:src="@drawable/ic_ballot"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:padding="8dp"
					android:id="@+id/activity_allselect"/>

			</com.noform.diaryofsuccess.CustomView.CircleRelativeLayout>

			<com.noform.diaryofsuccess.CustomView.CircleRelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:visibility="visible"
				app:background_alpha="255"
				app:background_color="@color/red"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<ImageView
					android:id="@+id/activity_delItem"
					android:src="@drawable/ic_delete_empty"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:padding="8dp"/>

				<TextView
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:text="0"
					android:gravity="center"
					android:textColor="@color/white"
					android:background="@drawable/shape_radius"
					android:id="@+id/textViewOfclickItemCount"/>

			</com.noform.diaryofsuccess.CustomView.CircleRelativeLayout>

			<com.noform.diaryofsuccess.CustomView.CircleRelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				app:background_alpha="255"
				app:background_color="@color/black"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<ImageView
					android:src="@drawable/ic_ballot_outline"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="10dp"
					android:padding="8dp"
					android:id="@+id/activity_reverseSelect"/>

			</com.noform.diaryofsuccess.CustomView.CircleRelativeLayout>

		</LinearLayout>

		<ImageButton
			android:id="@+id/set_main"
			style="?android:attr/buttonBarButtonStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_eslint" />

	</RelativeLayout>

</LinearLayout>

